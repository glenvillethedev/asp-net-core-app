@using System.Security.Claims
<!DOCTYPE html>

<html lang="en" class="h-100">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="apple-touch-icon" sizes="180x180" href="~/img/apple-touch-icon.png" asp-append-version="true">
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/favicon-32x32.png" asp-append-version="true">
    <link rel="icon" type="image/png" sizes="16x16" href="~/img/favicon-16x16.png" asp-append-version="true">
    <link rel="manifest" href="~/img/site.webmanifest" asp-append-version="true">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/styles.css" rel="stylesheet" asp-append-version="true" />
</head>

<body class="d-flex flex-column h-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <a asp-controller="Home" asp-action="Index" asp-area="Admin" class="navbar-brand"><img src="~/img/Logo-Light.png" alt="Expenses Tracker Logo" class="img-fluid" style="max-width: 40px; margin-right: 8px" asp-append-version="true">Expenses Tracker - Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-toggle"
                    aria-controls="navbar-toggle" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbar-toggle">
                <!-- User Dropdown -->
                <ul class="navbar-nav ms-auto mb-2 mb-sm-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/img/User-Default.png" alt="Default User Icon" width="25" asp-append-version=true>
                            @(User.FindFirst("FullName")?.Value ?? "")
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="userDropdown">
                            @if(User.IsInRole(AppUserRoles.Admin.ToString())){
                                <li><a asp-controller="Home" asp-action="Index" asp-area="Admin" class="dropdown-item"><i class="fa-solid fa-gear fa-xs"></i>Admin Settings</a></li>
                            }
                            <li><a asp-controller="Account" asp-action="Logout" class="dropdown-item"><i class="fa-solid fa-right-from-bracket fa-xs"></i>Sign Out</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 bg-body-tertiary">
        <div class="container">
            <span class="text-body-secondary">
                    Expenses Tracker - Admin
                    &copy;
                    <span id="copyright">
                        <script>document.getElementById('copyright').appendChild(document.createTextNode(new Date().getFullYear()))</script>
                    </span>
                    Glenville Maturan
            </span>
        </div>
    </footer>

    @RenderSection("custom_scripts", false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous">
    </script>
    <script src="https://kit.fontawesome.com/dd1e1b79b0.js" crossorigin="anonymous"></script>
</body>
</html>
