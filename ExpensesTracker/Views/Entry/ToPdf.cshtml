@model List<EntryResponse>
@{
    Layout = null;
    var domain = new UriBuilder(Context.Request.Scheme, Context.Request.Host.Host, Context.Request.Host.Port.GetValueOrDefault());
    var styles_url = domain.ToString() + "css/styles.css";
}

<!-- Table -->

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link href="@styles_url" rel="stylesheet" />

<div class="container my-2">
    <!-- Table Name -->
    <h4 class="mb-3">Transaction Records</h4>

    <!-- Bootstrap Table -->

    <div class="table-responsive-sm">
        <table class="table table-bordered table-hover">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (EntryResponse entry in Model)
                {
                    <tr>
                        <td>@entry.Name</td>
                        <td>$ @entry.Amount.ToString("N2")</td>
                        <td>@entry.Date.ToString("MM-dd-yyyy")</td>
                        <td>@entry.Category.ToString()</td>
                        <td>@entry.Details</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>